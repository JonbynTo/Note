<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" 
    android:background="@color/title_bar">
    
	<LinearLayout 
	    android:id="@+id/aaa"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/title_click_selector">
	    <ImageView 
	        android:id="@+id/title_edit_back"
	        android:layout_width="35dp"
	        android:layout_height="35dp"
	        android:src="@drawable/back"/>
	    <TextView
	        android:id="@+id/title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dp"
	        android:text="@string/back"
	        android:textSize="15sp"
	        android:textStyle="bold"
	        android:textColor="@color/white"/>
	</LinearLayout>
	
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true">
	    <TextView 
	        android:id="@+id/edit_title_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/edit_title"
	        android:textSize="15sp"
	        android:textStyle="bold"
	        android:textColor="@color/white"/>
	</LinearLayout>
	
	<LinearLayout 
	    android:id="@+id/title_edit_done"
	    android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:background="@drawable/title_click_selector">
	    <ImageView 
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:src="@drawable/done"
	        android:layout_marginRight="10dp"
	        android:layout_marginLeft="10dp"/>
	</LinearLayout>
	
	<LinearLayout 
	    android:id="@+id/title_edit_delete"
	    android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/title_edit_done" 
        android:background="@drawable/title_click_selector">
	    <ImageView 
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginLeft="10dp"
	        android:src="@drawable/cross"/>
	</LinearLayout>
	
</RelativeLayout>
